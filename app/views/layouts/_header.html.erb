<header class="navbar navbar-fixed-top navbar-inverse ">
   <div class="container-fluid">
      
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
     
      <div class="navbar-header ">
         <button type="button" class="navbar-toggle pull-left toggle-button-margin" data-toggle="collapse" data-target="#myNavbar">
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span> 
         </button>
         
         <%= link_to "Tinkle", root_path, id: "logo" %>
      </div>
      
      <nav>
         <ul class="nav navbar-nav navbar-right collapse navbar-collapse" id="myNavbar">
            <li><%= link_to "<span class=\"glyphicon glyphicon-home\"></span> Home".html_safe, root_path %></li>
            <li><%= link_to "<span class=\"glyphicon glyphicon-question-sign\"></span> Help".html_safe, help_path %></li>

            <% if logged_in? %>
               <li><%= link_to "<span class=\"glyphicon glyphicon-user\"></span> Users".html_safe, users_path %></li>
               <!--<li><%= link_to "Settings", edit_user_path(current_user) %></li>-->
               <li class="dropdown ">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                     <%= gravatar_for current_user, size:25 %>
                     <%= current_user[:name] %><b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu" role="menu">
                     <li><%= link_to "Profile", current_user %></li>
                     <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                     <li class="divider"></li>
                     <li>
                        <%= link_to "Log out", logout_path, method: "delete" %>
                     </li>
                  </ul>
               </li>
            <% else %>
               <li><%= link_to "<span class=\"glyphicon glyphicon-log-in\"></span> Log in".html_safe, login_path %></li>
            <% end %>
         </ul>
      </nav>
      
   </div>
</header>