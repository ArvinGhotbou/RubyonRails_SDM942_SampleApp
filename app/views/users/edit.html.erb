<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
   <div class="col-md-6 col-md-offset-3">
      <div class="gravatar_edit" style="width:15%; margin:0 auto; text-align: center;">
         <a href="http://gravatar.com/emails" target=_blank><%= gravatar_for @user %></a>
         <br style="clear:both"/>
         <a href="http://gravatar.com/emails" target=_blank>change</a>
      </div>
      
      <%= form_for(@user) do |f| %>
         <%= render 'fields', f: f %>
         <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
      
   </div>
</div>